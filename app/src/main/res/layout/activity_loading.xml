<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".view.activity.LoadingActivity">

    <me.itangqi.waveloadingview.WaveLoadingView
        android:id="@+id/waveLoadingView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        app:wlv_borderColor="@color/background_primary"
        app:wlv_borderWidth="0dp"
        app:wlv_progressValue="40"
        app:wlv_round_rectangle="false"
        app:wlv_shapeType="rectangle"
        app:wlv_titleCenter="@string/welcome_to_bottle"
        app:wlv_titleCenterColor="@color/background_primary"
        app:wlv_titleCenterSize="30sp"
        app:wlv_titleCenterStrokeColor="@android:color/holo_blue_dark"
        app:wlv_titleCenterStrokeWidth="1dp"
        app:wlv_triangle_direction="north"
        app:wlv_waveAmplitude="15"
        app:wlv_waveColor="@color/background_primary" />

</FrameLayout>
