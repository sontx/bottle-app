<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="0dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/fragment_room_message" />

        <com.blogspot.sontx.bottle.view.custom.AutoSizeImageView
            android:id="@+id/image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_image_height"
            android:layout_marginTop="@dimen/media_content_margin_top"
            android:background="@color/background_gray_lightest"
            android:visibility="visible" />

        <include layout="@layout/fragment_room_message_bar" />
    </LinearLayout>

</android.support.v7.widget.CardView>